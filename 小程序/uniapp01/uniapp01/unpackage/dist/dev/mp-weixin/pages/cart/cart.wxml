<view class="cart"><view class="cartList"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['changeSelect',['$0',index],[[['cartList','id',item.id,'isSelected']]]]]]]}}" class="{{['iconfont','icon-xuanzhong',(item.isSelected==true)?'selected':'']}}" bindtap="__e"></text><view class="goodsitem"><image src="{{item.img}}"></image><view class="goodsinfo"><view class="name">{{item.desc}}</view><view class="price">{{"￥"+item.price}}</view></view></view><view class="numctl"><text data-event-opts="{{[['tap',[['changeCount',[false,index]]]]]}}" class="sub" bindtap="__e">-</text><text class="num">{{item.buyCount}}</text><text data-event-opts="{{[['tap',[['changeCount',[true,index]]]]]}}" class="add" bindtap="__e">+</text></view></view></block></view><view class="footer"><text data-event-opts="{{[['tap',[['changeAllSelected']]]]}}" class="{{['iconfont','icon-xuanzhong',(isAllSelected==true)?'selected':'']}}" bindtap="__e">{{"已选择"+totalCount+''}}</text><view class="right"><view class="btn">{{"合计:￥"+totalPrice+''}}</view><view class="btn order">下单</view></view></view></view>