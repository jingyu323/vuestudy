.catgory .header {
  margin: 10rpx 0;
  padding: 10rpx 0;
}
.catgory .header .search {
  margin: 0 auto;
  width: 90%;
  line-height: 60rpx;
  background-color: #ddd;
  border-radius: 4rpx;
  text-align: center;
}
.catgory .content {
  display: flex;
  height: calc(100vh - 102rpx);
  border-top: #ccc solid 3rpx;
}
.catgory .content .left {
  width: 20%;
  border-right: #ccc solid 3rpx;
  height: 100%;
}
.catgory .content .left .navscroll {
  height: 100%;
  height: calc(100vh - 102rpx);
}
.catgory .content .left .navscroll .naveItem {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  position: relative;
}
.catgory .content .left .navscroll .naveItem.active::before {
  content: "";
  width: 2rpx;
  height: 50rpx;
  background-color: red;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}
.catgory .content .right {
  width: 80%;
  height: 100%;
  text-align: center;
}
.catgory .content .right .contentscroll {
  height: 100%;
}
.catgory .content .right .contentscroll .topimg {
  height: 200rpx;
  width: 96%;
  margin: 0 auto;
  display: block;
}
.catgory .content .right .contentscroll .catgoryList {
  display: flex;
  flex-wrap: wrap;
}
.catgory .content .right .contentscroll .catgoryList .contentItem {
  width: 33%;
  height: 200rpx;
}
.catgory .content .right .contentscroll .catgoryList .contentItem image {
  width: 33%;
  height: 140rpx;
}

